extends includes/template

block title
	title mainpage


block content
	.container
		include includes/_header
		include includes/_mainmenu

		nav.navbar.navbar-desktop.hidden-xs
			.navbar-header
				ul.nav.navbar-nav
					li
						a(href="about.html") О Россотрудничестве
					li.open
						a(href="activity.html") Деятельность
					li
						a(href="anons.html") Анонсы
					li
						a(href="news.html") Новости
					li
						a(href="contacts.html") Контакты

			a(href="javascript:;").search
				img(src="./img/icons/ic-search.svg", onerror="this.onerror=null; this.src='./img/icons/ic-search.png'")

			.searchField
				.input-group
					input(type="text").form-control
					span.input-group-btn
						button(type="button").btn.btn-warning: img(src="./img/icons/ic-search-white.svg", onerror="this.onerror=null; this.src='./img/icons/ic-search-white.png'")


		.row
			aside.col-sm-4.hidden-xs
				include includes/_sidemenu
			.col-max-6.col-sm-7.col-xs-12
				ol.breadcrumb.hidden-xs
					li: a(href="./") Главная страница
					li: a(href="about.html") О Россотрудничестве
					li.active Государственные программы

				section.content
					h1 Государственные программы

					article.card.hidden-xs
						a(href="about_programs_strategy.html")
							img(src="./img/about/img02.png", alt="")
						p Стратегические коммуникации российского содействия международному развитию

					article.card.hidden-xs
						a(href="about_programs_sng.html")
							img(src="./img/about/img05.png", alt="")
						p Межгосударственная программа инновационного сотрудничества государств-участников СНГ

					article.card.hidden-xs
						a(href="about_programs_newGen.html")
							img(src="./img/about/img04.png", alt="")
						p «Новое поколение»: ознакомительные поездки в Россию для молодых представителей политических, общественных, научных и деловых кругов иностранных государств

					article.card.hidden-xs
						a(href="about_programs_settlers.html")
							img(src="./img/about/img03.png", alt="")
						p Содействие добровольному переселению в Российскую Федерацию соотечественников, проживающих за рубежом

					article.card.hidden-xs
						a(href="about_programs_extpol.html")
							img(src="./img/about/img02.png", alt="")
						p Внешнеполитическая деятельность

					article.card.hidden-xs
						a(href="about_programs_rulang.html")
							img(src="./img/about/img02.png", alt="")
						p Русский язык



					.list-group.visible-xs
						a(href="about_programs_strategy.html").list-group-item Стратегические коммуникации российского содействия международному развитию
						a(href="about_programs_sng.html").list-group-item Межгосударственная программа инновационного сотрудничества государств-участников СНГ
						a(href="about_programs_newGen.html").list-group-item «Новое поколение»: ознакомительные поездки в Россию для молодых представителей политических, общественных, научных и деловых кругов иностранных государств
						a(href="about_programs_settlers.html").list-group-item Содействие добровольному переселению в Российскую Федерацию соотечественников, проживающих за рубежом
						a(href="about_programs_extpol.html").list-group-item Внешнеполитическая деятельность
						a(href="about_programs_rulang.html").list-group-item Русский язык


	include includes/_footer
