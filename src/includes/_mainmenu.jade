				li: a(href=linkPath) #{linkName}

	a(href="javascript:;").search
		img(src="./img/icons/ic-search.svg", onerror="this.onerror=null; this.src='./img/icons/ic-search.png'")

	.searchField
		.input-group
			input(type="text").form-control
			span.input-group-btn
